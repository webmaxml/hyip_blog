//- mixins
include ../modules/head/head.pug
//- states
- var page = 'hyip';

html
	head
		+head( 'Хайпы' )
	body
		// wrapper
		div.wrapper
			a.wrapper__link( href="#ad" )
				img.wrapper__img( src=require( '../img/ad_bg.jpg' ) )
			include ../modules/header/header.pug
			include ../modules/mainMenu/mainMenu.pug
			include ../modules/slider/slider.pug
			// main
			main.main
				// post
				section#post.post
					include ../modules/hyipBox/hyipBox.pug
					include ../modules/postLoader/postLoader.pug
				// sidebar
				aside.sidebar
					include ../modules/categories/categories.pug
					include ../modules/tabs/tabs.pug
			include ../modules/footer/footer.pug
		include ../modules/upButton/upButton.pug
		include ../modules/tooltip/tooltip.pug
		script( src='https://www.gstatic.com/charts/loader.js' )