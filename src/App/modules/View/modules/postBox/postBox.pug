//- mixins

mixin postHeader( text, setLink )
	//postHeader
	.postHeader
		h1.postHeader__text
			if setLink
				a.postHeader__link( href="/post.html#post" )= text
			else
				= text
		ul.postHeader__meta-info
			li.postHeader__meta-item
				a.postHeader__meta-link( href="/" )
					i.fa.fa-list-ul.postHeader__meta-icon
					| Новичкам
			li.postHeader__meta-item
				span.postHeader__meta-text
					i.fa.fa-calendar.postHeader__meta-icon
					| 12.11.2016
			li.postHeader__meta-item
				a.postHeader__meta-link( href="/post.html#comments" )
					i.fa.fa-comments.postHeader__meta-icon
					| 146 комментариев
			li.postHeader__meta-item
				span.postHeader__meta-text
					i.fa.fa-eye.postHeader__meta-icon
					| 546 просмотров

//--------------------------------------------------------------------------

mixin postThumbnail()
	//postThumbnail
	.postThumbnail
		a.postThumbnail__link( href="/post.html#post" )
			img.postThumbnail__img( src=require( '../img/post_image.jpg' ) )
		ul.postThumbnail__social
			li.postThumbnail__social-item
				a.postThumbnail__social-link-vk( href="/" )
					i.fa.fa-vk.postThumbnail__social-icon
			li.postThumbnail__social-item
				a.postThumbnail__social-link-facebook( href="/" )
					i.fa.fa-facebook.postThumbnail__social-icon
			li.postThumbnail__social-item
				a.postThumbnail__social-link-twitter( href="/" )
					i.fa.fa-twitter.postThumbnail__social-icon
			li.postThumbnail__social-item
				a.postThumbnail__social-link-google( href="/" )
					i.fa.fa-google-plus.postThumbnail__social-icon

