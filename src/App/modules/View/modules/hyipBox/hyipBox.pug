//- mixins

mixin hyipHeader()
	//hyipHeader
	.hyipHeader
		h1.hyipHeader__text
			a.hyipHeader__link( href="/hyip.html" ) MEETFREEMAN
		ul.hyipHeader__meta-info
				li.hyipHeader__meta-item
					a.hyipHeader__meta-link( href="/" )
						i.fa.fa-list-ul.hyipHeader__meta-icon
						| Рекомендуемые
				li.hyipHeader__meta-item
					span.hyipHeader__meta-text
						i.fa.fa-calendar.hyipHeader__meta-icon
						| 12.11.2016
				li.hyipHeader__meta-item
					a.hyipHeader__meta-link( href="/hyip.html#comments" )
						i.fa.fa-comments.hyipHeader__meta-icon
						| 29 комментариев
				li.hyipHeader__meta-item
					span.hyipHeader__meta-text.hyipHeader__meta-text--accent
						button.hyipHeader__meta-btn( type="button" )
							i.fa.fa-star.hyipHeader__meta-icon
						| 149

//------------------------------------------------------------------------------

mixin hyipThumbnail( alive )
	//hyipThumbnail
	.hyipThumbnail
		if alive
			a.hyipThumbnail__link( href="/hyip.html" )
				img.hyipThumbnail__img( src=require( '../img/slider_1.jpg' ) )
		else
			a.hyipThumbnail__link.hyipThumbnail__link--dead( href="/hyip.html" )
				img.hyipThumbnail__img( src=require( '../img/slider_1.jpg' ) )
		.hyipThumbnail__status-wrap
			span.hyipThumbnail__status-title Статус:
			if alive
				span.hyipThumbnail__status-alive Жив
			else
				span.hyipThumbnail__status-dead Умер

