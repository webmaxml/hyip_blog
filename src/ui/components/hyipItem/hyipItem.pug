mixin hyipItemProfit()
	//hyipItemProfit
	.hyipItemProfit
		+sectionHeader( 'Расчет прибыли' )
		p.hyipItemProfit__text Для расчета прибыли выберите нужный план и вклад. Обратите внимание на то, что график учитывает наличие или отсутсвие вклада в выплатах. В последнем случае в конце срока присутствует скачок прибыли, означающий возврат вашего вклада
		.hyipItemProfit__chart-wrap
			#chart.hyipItemProfit__chart
		form.hyipItemProfit__form
			.hyipItemProfit__form-wrap
				.hyipItemProfit__label-wrap
					label.hyipItemProfit__label( for="plan" ) План
				.hyipItemProfit__select-wrap
					select#plan.hyipItemProfit__select-input( name="plan" )
					.hyipItemProfit__select
						.hyipItemProfit__select-value
						.hyipItemProfit__option-box
						i.fa.fa-chevron-down.hyipItemProfit__select-icon
			.hyipItemProfit__form-wrap
				.hyipItemProfit__label-wrap
					label.hyipItemProfit__label( for="deposit" ) Вклад
				.hyipItemProfit__input-wrap
					input#deposit.hyipItemProfit__input( type="text" name="deposit" )
					i.fa.fa-dollar.hyipItemProfit__icon
			.hyipItemProfit__form-wrap
				.hyipItemProfit__label-wrap
					span.hyipItemProfit__label с учетом рефбека
				.hyipItemProfit__input-wrap
					input#refback.hyipItemProfit__checkbox-input( type="checkbox" name="refback" )
					label.hyipItemProfit__checkbox( for="refback" )
						i.fa.fa-check.hyipItemProfit__checkbox-icon
			.hyipItemProfit__btn-wrap
				button.hyipItemProfit__submit Расчитать

//-----------------------------------------------------------------------------


//hyipItem
.hyipItem
	+hyipItemHeader()
	+hyipItemMoney()
	+hyipItemPlans()
	+hyipItemProfit()